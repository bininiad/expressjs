extends ../layouts/common

block content

  if success==1
    .alert.alert-success.mx-auto Login successfully
  h1
    span Users
    a.ml-5.btn.btn-primary(href="/users/create") New

  .d-flex
    form.ml-auto(action="/users/search", method="GET", class="d-flex")
      input(type="text", name="q", class="form-control")
      button(class="btn btn-primary ml-2") Search

  table.table
    tr
      th Avatar
      th Name
      th Phone
      th Actions

    each user in users
      tr
        td
          img.z-depth-2.rounded-circle(src=user.avatar, alt="", width=64)
        td= user.name
        td= user.phone
        td
          a.btn.btn-light(href='/users/' + user.id) View
